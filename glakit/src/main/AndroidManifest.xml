<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lhx.glakit">

    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <!--扫一扫-->
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.FLASHLIGHT"/>

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application>
        <activity android:name=".base.activity.BaseActivity"/>
        <activity android:name=".base.activity.BaseContainerActivity"/>
        <activity android:name=".image.ImagePickerActivity"/>
        <activity android:name=".image.ImagePickerCameraEmptyActivity"
                  android:configChanges="orientation|keyboardHidden|screenSize"
                  android:theme="@style/Picture.Theme.Translucent"/>
    </application>
</manifest>


